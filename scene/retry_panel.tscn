[sub_resource type="GDScript" id="GDScript_kkbd0"]
resource_name = "Retry"
script/source = "extends IngamePanel

@onready var audio: AudioStreamPlayer2D = $AudioStreamPlayer2D

func _ready() -> void:
	get_tree().paused = true
	super._ready()
	
	var viewport_size := get_viewport().get_visible_rect().size
	
	var label2 := $Label2
	label2.size.x = viewport_size.x
	label2.position.y = $PanelContainer.position.y - label2.size.y
	
	var label := $Label
	label.text = str(GameManager.score)
	label.size.x = viewport_size.x
	label.position.y = label2.position.y - label.size.y
	label = null
	
	if GameManager.score > GameManager.high_score:
		GameManager.high_score = GameManager.score
		label2.visible = true
	else:
		label2.visible = false

func _on_retry_pressed() -> void:
	audio.play()
	await audio.finished
	get_parent().get_parent().set_state(GameStateMachine.GameState.PAUSED)
	get_tree().reload_current_scene()

func _on_back_pressed() -> void:
	audio.play()
	await audio.finished
	get_tree().paused = false
	get_tree().change_scene_to_file(\"res://scene/main_menu.tscn\")
"

